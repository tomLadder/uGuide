<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="uGuide.Pages.StationHistory"
             Title="History">
  <StackLayout>
    <StackLayout Orientation="Horizontal" BackgroundColor="#388E3C">
      <Image Source="icon_station_todo.png" Margin="5" VerticalOptions="Center"></Image>
      <Label x:Name="lblTodo" Text="Stationen zu besuchen" VerticalOptions="Center" VerticalTextAlignment="Center" FontSize="Medium" TextColor="White" FontAttributes="Bold"></Label>
    </StackLayout>
    <ListView x:Name="ToDoList"/>
    <StackLayout Orientation="Horizontal" BackgroundColor="#388E3C">
      <Image Source="icon_station_done.png" Margin="5" VerticalOptions="Center"></Image>
      <Label x:Name="lblDone" Text="Stationen besucht" VerticalOptions="Center" VerticalTextAlignment="Center" FontSize="Medium" TextColor="White" FontAttributes="Bold"></Label>
    </StackLayout>
    <ListView x:Name="DoneList"/>

  </StackLayout>
</ContentPage>