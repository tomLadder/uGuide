<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="uGuide.Pages.NewTourPage"
             Title="Führung">
  <ScrollView>
  <Grid RowSpacing="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
      <RowDefinition Height="Auto" />
    </Grid.RowDefinitions>
    <Grid.ColumnDefinitions>
      <ColumnDefinition Width="*" />
      <ColumnDefinition Width="*" />
    </Grid.ColumnDefinitions>
    <Label x:Name="lblFührung"  Grid.Row="0" Grid.Column="0"  Grid.ColumnSpan="2" Text="Neue Führung" Margin="15" HorizontalTextAlignment="Center"/>
    <Label x:Name="lblPLZ"  Grid.Row="1" Grid.Column="0"  Grid.ColumnSpan="2" Text="Postleitzahl:"  HorizontalTextAlignment="Center" FontSize="Large"/>
    <Entry x:Name="txtPLZ" Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" HorizontalTextAlignment="Center" Margin="50,0,50,0" FontSize="Medium" Keyboard="Numeric"/>
    <Label x:Name="lblGender"  Grid.Row="3" Grid.Column="0"  Grid.ColumnSpan="2" Text="Geschlecht:"  HorizontalTextAlignment="Center" FontSize="Large"/>
    <Button x:Name="btnMale" Clicked="MaleButtonClicked" Grid.Row="4" Grid.Column="0" Image="male.png" Margin="25,0,25,0" BackgroundColor="Transparent"/>
    <Button x:Name="btnFemale" Clicked="FemaleButtonClicked" Grid.Row="4" Grid.Column="1" Image="female.png" Margin="25,0,25,0" BackgroundColor="Transparent"/>
    <Button x:Name="btnStartTour" Clicked="StartTourButtonClicked" Text="Führung starten" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="2" Margin="5,0,5,0" FontSize="Large" BackgroundColor="#00BCD4"/>
    <Button x:Name="btnLogout" Clicked="LogoutButtonClicked" Text="Abmelden" Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" Margin="5,0,5,0" FontSize="Large" BackgroundColor="#00BCD4"/>
  </Grid>
  </ScrollView>
</ContentPage>